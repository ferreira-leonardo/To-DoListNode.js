<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do List</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <header>
        <% if (task == null) { %>
        <form action="/create" method="post" enctype="application/x-www-form-urlencoded">
            <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
            <button type="submit" id="addButton">Adicionar</button>
        </form>
        <% } else { %>

        <form action="/updatetask/<%= task._id %>" method="post" enctype="application/x-www-form-urlencoded">
            <input type="text" name="task" id="task" value='<%= task.task %>'>
            <button type="submit" id="addButton">atualizar</button>
        </form>
        <% } %>
    </header>
    
    <section id="tasks">
        <ul>
            <% taskList.forEach( (task) => { %>
                <li>
                    <%= task.task %> | <%= task.date.toLocaleDateString('pt-Br') %>
                    <a href="/getbyid/<%= task._id%>/update">Editar</a>
                    <a href="/getbyid/<%= task._id%>/delete">Apagar</a>
                </li>
            <% }) %>
        </ul>
    </section>

    <% if (taskDelete != null) { %>
        <section id="modal">
            <div id="card">
                <a href="/">x</a>
                <h2>Confirmação</h2>
                <hr>
                <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %>?</p>
                <a href="/">Não</a>
                <a href="/deleteonetask/<%= taskDelete._id%>">Sim</a>
            </div>
        </section>
    <% } %>

    <script src="js/script.js"></script>
</body>
</html>