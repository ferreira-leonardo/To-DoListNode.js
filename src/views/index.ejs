<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do List</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <form action="/create" method="post" enctype="application/x-www-form-urlencoded">
        <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
        <button type="submit" id="addButton">Adicionar</button>
    </form>
    
    <ul>
        <% taskList.forEach( (task) => { %>
            <li>
                <%= task.task %> | <%= task.date.toLocaleDateString('pt-Br') %>
            </li>
        <% }) %>
    </ul>

    <script src="js/script.js"></script>
</body>
</html>